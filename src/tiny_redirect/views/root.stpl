<!DOCTYPE html>
<html lang="en">
% include("header")

<body>
  % include("navmenu")
  <div class="d-flex mx-auto" style="width: 50%; min-width:600px; padding-bottom: 20%;">

    <div class="list-group mt-5" style="margin:auto;">
      <h4>Redirects</h4>
      <input id="redirects_filter" type="text" placeholder="Filter..." style="width: 100%;"><br>
      <div id="table_of_redirects">
        % for k, v in redirects:
        % if "://" not in v:
        % url = "http://" + v
        % else:
        % url = v
        % end
        <a href="{{url}}" style="overflow-y:auto; white-space: nowrap;"
          class="list-group-item list-group-item-action"><strong>{{k}}</strong>
            <span class="upside-down-text">
              &nbsp;&#8620;&nbsp;
            </span>
          <strong>{{v}}</strong>
        </a>
        % end
      </div>
    </div>
  </div>
  % include("footer")
  % include("js")
  <script>
    $(document).ready(function () {
      $("#redirects_filter").on("keyup", function () {
        var value = $(this).val().toLowerCase();
        $("#table_of_redirects a").filter(function () {
          $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
        });
      });
    });
  </script>
</body>

</html>